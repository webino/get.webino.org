#!/bin/bash

# This is the Webino™ setup script!
# Copyright (c) 2015-2018 Webino, s.r.o. (http://webino.sk)
# Version: @@version@@
#
# Are you looking at this in your web browser, and would like to get Webino™?
# Just open up your terminal and type:
#
#    wget @@host@@/php -qO- | sh
#
# Webino™ currently supports:
#   - Ubuntu 16.04
#
# What this script does?
#   - It builds PHP from source

main() {
    cd /tmp/php

    #-----------+
    # configure |
    #-----------+
    local data='@@host@@/php/~data'

    // TODO PHP prefix support
    #local etc='/etc/'${php_prefix:-'php'}


    echo 'Configuring PHP...'

    sudo mkdir -p $etc/conf.d

    # TODO PHP version update support
    if [[ -n $_update ]]; then
        rm -f $etc/php.ini
        rm -f $etc/conf.d/custom.ini
        rm -f $etc/php-cli.ini
    fi

    #------------+
    # php config |
    #------------+
    [[ -f $etc/php.ini ]] || sudo cp ./php.ini-production $etc/php.ini
    sudo pear config-set php_ini $etc/php.ini
    sudo pecl config-set php_ini $etc/php.ini

    #------------+
    # cli config |
    #------------+
    [[ -f $etc/php-cli.ini ]] || sudo wget -qO $etc/php-cli.ini $data/php/php-cli.ini

    #---------------+
    # custom config |
    #---------------+
    [[ -f $etc/conf.d/custom.ini ]] || sudo wget $etc/conf.d/custom.ini -qO $data/php/conf.d/custom.ini

    # local & dev only
    if [[ -n $_env_local || -n $_env_dev ]]; then

        # dev config
        [[ -f $etc/conf.d/dev.ini ]] || \
            sudo wget -qO $etc/conf.d/dev.ini $data/php/conf.d/dev.ini
    fi

    # TODO!!!
    # TODO!!!
    # TODO!!!
    # TODO!!!
    # PHP Apache config
    # TODO decouple to PHP setup
    #local file=/etc/apache2/conf.d/php.conf
    #sudo wget $data$file -qO $file

    # apache config
    [[ ! -d /etc/apache2/conf.d || -f /etc/apache2/conf.d/php.conf ]] || \
        sudo wget -qO /etc/apache2/conf.d/php.conf $data/apache2/conf.d/php.conf

    return
}

main
