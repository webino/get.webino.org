#!/bin/bash

# This is the Webino™ setup script!
# Copyright (c) 2015-2018 Webino, s.r.o. (http://webino.sk)
# Version: @@version@@
#
# Are you looking at this in your web browser, and would like to get Webino™?
# Just open up your terminal and type:
#
#    wget @@host@@/mysql -qO- | sh
#
# Webino™ currently supports:
#   - Ubuntu 16.04 | 15.10 | 14.04
#
# What this script does?
#   - It installs MySQL database

main() {
    # return early when Logwatch not installed
    [[ ! -d /usr/share/logwatch ]] && return

    local data='@@host@@/data/'
    local file=/usr/share/logwatch/dist.conf/logfiles/mysql.conf
    if [[ ! -f $file ]]; then
        echo 'Installing Logwatch for MySQL...'
        sudo wget $data$file -qO $file
    else
        echo 'Logwatch for MySQL already installed...'
    fi
}

main
