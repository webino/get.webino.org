#!/bin/bash

# This is the Webino™ setup script!
# Copyright (c) 2015-2018 Webino, s.r.o. (http://webino.sk)
# Version: @@version@@
#
# Are you looking at this in your web browser, and would like to get Webino™?
# Just open up your terminal and type:
#
#    wget @@host@@/system -qO- | sh
#
# Webino™ currently supports:
#   - Ubuntu 16.04 | 14.04
#
# What this script does?
#   - It configures operating system

main() {
    #------------------+
    # environment info |
    #------------------+
    echo -n 'Environment: '
    [[ -n $_env_local ]] && echo 'local'
    [[ -n $_env_dev ]]   && echo 'development'
    [[ -n $_env_pub ]]   && echo 'public'
    echo

    #---------+
    # general |
    #---------+
    load system/arguments "$@"
    load system/info
    load system/locale
    load system/essential

    #----------------------+
    # extra (dev|pub only) |
    #----------------------+
    if [[ -n $_env_dev || -n $_env_pub ]]; then
        load system/mailer
        load system/upgrades
        load system/logwatch
        load system/fail2ban
        load system/ssh
    fi

    #------+
    # done |
    #------+
    echo 'System setup done...'
}

main "$@"
