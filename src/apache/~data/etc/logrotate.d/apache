/var/log/apache*/*.log {
    weekly
    missingok
    rotate 3
    compress
    delaycompress
    notifempty
    su www-data www-data
    create 0640 www-data www-data
    sharedscripts
    prerotate
        if [ -d /etc/logrotate.d/httpd-prerotate ]; then \
            run-parts /etc/logrotate.d/httpd-prerotate; \
        fi; \
    endscript
}
