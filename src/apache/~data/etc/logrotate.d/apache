/var/log/apache*/*.log {
    weekly
    missingok
    rotate 3
    compress
    delaycompress
    notifempty
    create 0640 root adm
    sharedscripts
    prerotate
        if [ -d /etc/logrotate.d/httpd-prerotate ]; then \
            run-parts /etc/logrotate.d/httpd-prerotate; \
        fi; \
    endscript
}
