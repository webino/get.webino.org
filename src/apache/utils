#--------------------+
# Web server restart |
#--------------------+
apache_restart()
{
    echo 'Restarting web server...'
    $(sleep 3 && sudo apachectl restart > /dev/null 2>&1) &
    return
}

#-------------------+
# Web server reload |
#-------------------+
apache_reload()
{
    echo 'Reloading web server...'
    $(sleep 3 && sudo apachectl graceful > /dev/null 2>&1) &
    return
}
