#!/bin/bash

# This is the Webino™ setup script!
# Copyright (c) 2015-2018 Webino, s.r.o. (http://webino.sk)
# Version: @@version@@
#
# Are you looking at this in your web browser, and would like to get Webino™?
# Just open up your terminal and type:
#
#    wget @@host@@/vhost -qO- | sh
#
# Webino™ currently supports:
#   - Ubuntu 16.04
#
# What this script does?
#   - It creates a virtual host

main() {
    #----------+
    # defaults |
    #----------+
    _vhost_domain=
    _vhost_name=
    _vhost_http=
    _vhost_https=
    _vhost_www=

    #----------+
    # get args |
    #----------+
    n=0
    for i in "$@"
    do
    n=$((n + 1))
    case $i in
        -vhost-domain)
            _vhost_domain=${argv[$n]}
            [[ $_vhost_name ]] || _vhost_name=$_vhost_domain
            shift
            shift
        ;;
        -vhost-name)
            _vhost_name=${argv[$n]}
            shift
            shift
        ;;
        -vhost-http)
            _vhost_http=1
            shift
        ;;
        -vhost-https)
            _vhost_https=1
            shift
        ;;
        -vhost-www)
            _vhost_www=1
            shift
        ;;
        *)
            # unknown option
        ;;
    esac
    done
}

main "${argv[@]}"
