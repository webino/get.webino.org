#!/bin/bash

# This is the Webino™ setup script!
# Copyright (c) 2015-2018 Webino, s.r.o. (http://webino.sk)
# Version: @@version@@
#
# Are you looking at this in your web browser, and would like to get Webino™?
# Just open up your terminal and type:
#
#    wget @@host@@ -qO- | sh
#
# Webino™ currently supports:
#   - Ubuntu 16.04 | 14.04

main() {
    argv=('')

    # defaults
    _no_interaction=
    _env_local=1
    _env_dev=
    _env_pub=
    _update=
    _clean=
    _admin_mail=

    n=0
    for i in "$@"
    do
    n=$((n + 1))
    case $i in
        --no-interaction|-n) # non interactive
            _no_interaction=1
            shift
        ;;
        --local) # local development
            _env_local=1
            _env_dev=
            _env_pub=
            shift
        ;;
        --dev) # development server
            _env_dev=1
            _env_local=
            _env_pub=
            shift
        ;;
        --pub) # public server
            _env_pub=1
            _env_dev=
            _env_local=
            shift
        ;;
        --update) # update files
            _update=1
            shift
        ;;
        --clean) # purge files
            _clean=1
            shift
        ;;
        --admin-mail)
            _admin_mail=${argv[$n]}
            shift
            shift
        ;;
        *)
            # unknown option
        ;;
    esac
    done
}

main "$@"
