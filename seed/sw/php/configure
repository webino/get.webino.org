#!/bin/bash

# This is the Webino Seed install script!
# Version: @@version@@
#
# Are you looking at this in your web browser, and would like to run Webino Seed?
# Just open up your terminal and type:
#
#    wget https://get.webino.org/seed/php -qO- | sh
#
# Webino currently supports:
#   - Ubuntu 12.04 (wget 1.14)
#   - Ubuntu 14.04
#
# What this script does?
#   - It builds PHP from source

main() {
    cd /tmp/php
    local etc='/etc/php'
    local data='https://get.webino.org/seed/data/etc'

    echo 'Configuring PHP...'

    sudo mkdir -p /etc/php/conf.d

    [[ -n $update ]] &&
        rm /etc/php/php.ini \
        && rm /etc/php/conf.d/custom.ini \
        && rm /etc/php/php-cli.ini

    # php config
    [[ -f /etc/php/php.ini ]] || \
        sudo cp ./php.ini-production /etc/php/php.ini

    sudo pear config-set php_ini /etc/php/php.ini
    sudo pecl config-set php_ini /etc/php/php.ini

    # cli config
    [[ -f /etc/php/php-cli.ini ]] || \
        sudo wget -qO $etc/php-cli.ini $data/php/php-cli.ini

    # custom config
    [[ -f /etc/php/conf.d/custom.ini ]] || \
        sudo wget -qO $etc/conf.d/custom.ini $data/php/conf.d/custom.ini

    # apache config
    [[ -f /etc/apache2/conf.d/php.conf ]] || \
        sudo wget -qO /etc/apache2/conf.d/php.conf $data/apache2/conf.d/php.conf

    return 0
}

main
